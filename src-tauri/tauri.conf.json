{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Lily",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "notification": {
        "all": true
      },
      "http": {
        "all": true, 
        "request": true,
        "scope": [ "http://localhost:1111/*", "http://localhost:1420/*" ]
      },

      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "scope": [
          "*/**",
          "$APPCONFIG/*",
          "$APPCONFIG/**",
          "$APPCONFIG",
          "$APPCONFIG/"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lily.ai",
      "icon": [
        "icons/32x32.png",
        "icons/64x64.png",
        "icons/128x128.png",
        "icons/256x256.png"
      ],
      "externalBin": [
        "../src-sidecar/dist/sidecar"
      ],
      "deb": {}
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "title": "Lily",
        "width": 800,
        "height": 500
      }
    ]
  }
}